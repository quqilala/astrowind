---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'OUTGOPRO — 出海增长与合规导航',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-12 md:py-20">
    <div class="flex justify-end mb-6">
      <!-- 中英切换按钮：后面要扩展语言时，直接改 data-lang 即可 -->
      <button
        id="lang-toggle"
        class="px-4 py-2 text-sm font-semibold rounded-lg border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800"
        type="button"
      >
        EN
      </button>
    </div>

    <div class="text-center mb-12 md:mb-16">
      <h1
        class="text-4xl md:text-6xl font-bold tracking-tight mb-4"
        data-i18n="heroTitle"
      >
        OUTGOPRO：出海增长与合规实践
      </h1>
      <p
        class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto"
        data-i18n="heroDesc"
      >
        聚焦 AI 工具与工作流、海外公司/账户设立与报税、网络技术、跨境电商，帮助你更高效地把业务做向全球。
      </p>
    </div>

    <!-- 板块说明：每个版块先放简短描述，后续你可直接扩写内容 -->
    <div class="grid gap-6 md:grid-cols-2">
      <article id="ai-tools" class="rounded-2xl border p-6 bg-white dark:bg-slate-900/40">
        <h2 class="text-2xl font-bold mb-3" data-i18n="aiTitle">AI 工具及工作流</h2>
        <p class="text-gray-600 dark:text-gray-300" data-i18n="aiDesc">
          精选可落地的 AI 工具与自动化工作流，用最少的人力完成内容生产、客户触达与运营提效。
        </p>
      </article>

      <article id="global-tax" class="rounded-2xl border p-6 bg-white dark:bg-slate-900/40">
        <h2 class="text-2xl font-bold mb-3" data-i18n="taxTitle">海外公司/账户设立报税</h2>
        <p class="text-gray-600 dark:text-gray-300" data-i18n="taxDesc">
          梳理海外主体搭建、银行/支付账户开设与税务申报关键节点，降低合规风险并提升执行效率。
        </p>
      </article>

      <article id="network-tech" class="rounded-2xl border p-6 bg-white dark:bg-slate-900/40">
        <h2 class="text-2xl font-bold mb-3" data-i18n="netTitle">网络技术</h2>
        <p class="text-gray-600 dark:text-gray-300" data-i18n="netDesc">
          关注网络架构、稳定性与安全实践，为跨境业务提供可靠的技术底座与可持续扩展能力。
        </p>
      </article>

      <article id="cross-border" class="rounded-2xl border p-6 bg-white dark:bg-slate-900/40">
        <h2 class="text-2xl font-bold mb-3" data-i18n="ecomTitle">跨境电商</h2>
        <p class="text-gray-600 dark:text-gray-300" data-i18n="ecomDesc">
          围绕选品、渠道、投放与履约提供可执行思路，帮助跨境电商业务更快找到增长曲线。
        </p>
      </article>
    </div>

    <section id="about" class="mt-10 rounded-2xl border p-6 md:p-8 bg-white dark:bg-slate-900/40">
      <h2 class="text-2xl md:text-3xl font-bold mb-3" data-i18n="aboutTitle">关于我们</h2>
      <p class="text-gray-600 dark:text-gray-300" data-i18n="aboutDesc">
        我们专注于“技术 + 合规 + 商业增长”的交叉场景，持续沉淀实战经验，帮助中国团队更稳更快走向全球市场。
      </p>
    </section>
  </section>

  <script is:inline>
    // 轻量级双语方案：通过 data-i18n 映射替换文本
    // 后续如果做多页面，可把这段抽到公共组件里复用
    const dict = {
      zh: {
        heroTitle: 'OUTGOPRO：出海增长与合规实践',
        heroDesc:
          '聚焦 AI 工具与工作流、海外公司/账户设立与报税、网络技术、跨境电商，帮助你更高效地把业务做向全球。',
        aiTitle: 'AI 工具及工作流',
        aiDesc: '精选可落地的 AI 工具与自动化工作流，用最少的人力完成内容生产、客户触达与运营提效。',
        taxTitle: '海外公司/账户设立报税',
        taxDesc: '梳理海外主体搭建、银行/支付账户开设与税务申报关键节点，降低合规风险并提升执行效率。',
        netTitle: '网络技术',
        netDesc: '关注网络架构、稳定性与安全实践，为跨境业务提供可靠的技术底座与可持续扩展能力。',
        ecomTitle: '跨境电商',
        ecomDesc: '围绕选品、渠道、投放与履约提供可执行思路，帮助跨境电商业务更快找到增长曲线。',
        aboutTitle: '关于我们',
        aboutDesc: '我们专注于“技术 + 合规 + 商业增长”的交叉场景，持续沉淀实战经验，帮助中国团队更稳更快走向全球市场。',
      },
      en: {
        heroTitle: 'OUTGOPRO: Global Growth & Compliance Playbook',
        heroDesc:
          'Focused on AI tools and workflows, overseas company/account setup & tax filing, network technology, and cross-border e-commerce to help your business scale globally.',
        aiTitle: 'AI Tools & Workflows',
        aiDesc: 'Practical AI tools and automation workflows to improve content creation, customer operations, and execution efficiency.',
        taxTitle: 'Overseas Company/Account Setup & Tax Filing',
        taxDesc: 'Key steps for entity setup, banking/payment accounts, and tax filing to reduce compliance risk and improve operational speed.',
        netTitle: 'Network Technology',
        netDesc: 'Network architecture, reliability, and security practices that support stable and scalable global operations.',
        ecomTitle: 'Cross-border E-commerce',
        ecomDesc: 'Actionable ideas across product selection, channels, ads, and fulfillment to accelerate growth for global commerce.',
        aboutTitle: 'About Us',
        aboutDesc: 'We focus on the intersection of technology, compliance, and business growth, helping Chinese teams expand globally with confidence.',
      },
    };

    let current = 'zh';
    const btn = document.getElementById('lang-toggle');

    const render = () => {
      document.querySelectorAll('[data-i18n]').forEach((el) => {
        const key = el.getAttribute('data-i18n');
        if (key && dict[current][key]) el.textContent = dict[current][key];
      });
      btn.textContent = current === 'zh' ? 'EN' : '中文';
      document.documentElement.lang = current === 'zh' ? 'zh-CN' : 'en';
    };

    btn?.addEventListener('click', () => {
      current = current === 'zh' ? 'en' : 'zh';
      render();
    });

    render();
  </script>
</Layout>
